<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @leaderboard.name %>
</p>

<div>
  <p>Entries:</p>
  <ol>
    <% @entries.each do |entry| %>
    <li><%= entry.username %> - <%= entry.score %></li>
  <% end -%>
  </ol>
  <%= paginate @entries %>
</div>

<div>
  <p>Scores:</p>
  <ul>
    <% @scores.each do |score| %>
    <li><%= l(score.created_at) %> <%= score.username %> - <%= score.score %>  <%= link_to 'Destroy', leaderboard_score_record_path(@leaderboard, score), method: :delete, data: { confirm: 'Are you sure?' } %></li>
  <% end -%>
  </ul>
  <%= paginate @scores, param_name: :scores_page %>
</div>

<div>
  <%= form_tag leaderboard_score_records_path(@leaderboard), method: :post do %>
    <p>
      <%= label_tag "Username" %>
      <%= text_field_tag "username" %>
    </p>
    <p>
      <%= label_tag "Score" %>
      <%= text_field_tag "score" %>
    </p>
    <%= submit_tag "Add score" %>
  <% end -%>
</div>

<hr>

<%= link_to 'Edit', edit_leaderboard_path(@leaderboard) %> |
<%= link_to 'Back', leaderboards_path %>
